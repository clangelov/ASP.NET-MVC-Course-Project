@model VinylC.Web.MVC.Areas.Private.Models.Messages.MessageSaveViewModel

@{
    ViewBag.Title = "Send";
}
@using (Html.BeginForm("Create", "Message", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ToUserId)
    <div class="container-fluid">
        <div class="row text-center">
            <h4>Send a new Message to @Model.ToUserName</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row form-horizontal">
                <div class="col-md-8 col-md-offset-2">
                    <fieldset>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", rows = "5", placeholder = "Writte message..." } })
                                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Send Message" class="btn btn-success full-width text-center" />
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
}
